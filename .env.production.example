# =============================================================================
# TASK-109: Production Environment Configuration Template
# =============================================================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production with real secrets!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=3000
APP_PORT=3000
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# For managed databases (Railway, Supabase, etc.), use the provided connection string
DATABASE_URL=postgresql://your_user:your_password@your_host:5432/your_database?schema=public

# For docker-compose postgres service:
POSTGRES_USER=cfkanban
POSTGRES_PASSWORD=changeme-strong-password-here
POSTGRES_DB=cfkanban

# Connection pool settings (for production optimization)
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# For managed Redis (Upstash, ElastiCache), use the provided URL
REDIS_URL=redis://your_host:6379

# For docker-compose redis service:
# REDIS_URL=redis://redis:6379

# Redis settings
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------
# Sentry Error Tracking
SENTRY_DSN=https://your_key@your_org.ingest.sentry.io/your_project
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=cf-kanban@1.0.0

# Performance Monitoring
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
# Auth.js secret (generate with: openssl rand -base64 32)
AUTH_SECRET=changeme-generate-a-secure-random-string
AUTH_TRUST_HOST=true

# Session/JWT secrets (if using additional auth methods)
SESSION_SECRET=changeme-generate-a-secure-random-string
JWT_SECRET=changeme-generate-another-secure-random-string

# CORS settings
CORS_ORIGIN=https://your-domain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
# Claude API (if using AI features)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# GitHub (if using integrations)
GITHUB_CLIENT_ID=your_client_id
GITHUB_CLIENT_SECRET=your_client_secret

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_WEBSOCKETS=true
ENABLE_REDIS_CACHE=true
ENABLE_METRICS=true
