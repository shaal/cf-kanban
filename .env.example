# SQLite database (default - simple local development, no external services needed)
DATABASE_URL="file:./dev.db"

# PostgreSQL (uncomment for production/multi-user deployments)
# DATABASE_URL="postgresql://cfkanban:cfkanban@localhost:5433/cfkanban?schema=public"

# Redis (optional - only needed for real-time sync across browser tabs/users)
# Set REDIS_ENABLED=true and provide REDIS_URL for multi-user real-time collaboration
REDIS_ENABLED=false
# REDIS_URL="redis://localhost:6379"

# Auth.js Configuration (TASK-096)
AUTH_SECRET="your-auth-secret-key-generate-with-openssl-rand-base64-32"
AUTH_TRUST_HOST=true

# GitHub OAuth (optional - for GitHub sign in)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Enable credentials auth for development
ENABLE_CREDENTIALS_AUTH=true
